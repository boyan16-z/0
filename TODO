bit = []
while True:
    i = int(input("\nПростой todo:\n  1.Добавить задачу.\n  2.Вывести список задач.\n  3.Выход.\n\nУкажите число: "))
    if i == 1:
        bit.append({'Задача':input('Сформулируйте задачу: '), 'Категория':input('Добавьте категорию к задаче: '), 'Дата':input('Добавьте время к задаче: ') })
    elif i == 2:
        for j in bit:
            print('\nЗадача: ',j['Задача'],'Категория: ',j['Категория'],'Дата: ',j['Дата'])
    elif i == 3: break
    else: print('Ошибка ввода.\n')
